# Begin: Install jq
{%- if context.base_os in ('amazonlinux2', 'rhel8', 'rhel9', 'rocky8', 'rocky9') %}
which jq > /dev/null 2>&1
if [[ "$?" != "0" ]]; then
  log_info "installing jq"
  yum install -y jq
fi
{%- endif %}
{%- if context.base_os in ('ubuntu2204') %}
which jq > /dev/null 2>&1
if [[ "$?" != "0" ]]; then
  log_info "installing jq"
  apt install -y jq
fi
{%- endif %}

# End: Install jq


