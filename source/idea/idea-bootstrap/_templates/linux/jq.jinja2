# Begin: Install jq
{% if context.base_os in ('amazonlinux2', 'amazonlinux2023', 'rhel8', 'rhel9', 'rocky8', 'rocky9') %}
which jq > /dev/null 2>&1
if [[ "$?" != "0" ]]; then
  log_info "installing jq"
  yum install -y jq
fi
{% elif context.base_os in ('ubuntu2204', 'ubuntu2404') %}
which jq > /dev/null 2>&1
if [[ "$?" != "0" ]]; then
  log_info "installing jq"
  apt install -y jq
fi
{% endif %}

# End: Install jq
