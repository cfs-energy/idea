# Begin: Update Sudoer Secure Path
# Enables sudo users to execute commands on this path.
{%- if context.base_os in ('amazonlinux2', 'amazonlinux2023', 'centos7', 'rhel7', 'rhel8', 'rhel9', 'rocky8', 'rocky9') %}
echo 'Defaults secure_path="{{ secure_path }}"' > /etc/sudoers.d/secure_path
{%- endif %}
# End: Update Sudoer Secure Path

