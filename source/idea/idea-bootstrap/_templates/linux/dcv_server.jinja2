{% else %}
  log_info "GPU InstanceType not detected. Skipping GPU driver installation."
{% endif %}

{%- if not context.is_gpu_instance_type() and context.vars.session.type.lower() == 'console' %}
  {%- include '_templates/linux/x_dummy_driver.jinja2' %}
